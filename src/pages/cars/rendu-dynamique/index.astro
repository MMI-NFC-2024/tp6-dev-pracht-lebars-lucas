---
import Layout from "../../../layouts/Layout.astro";
import cars from "../../../assets/cars.json";

// GÃ©nÃ©rer automatiquement la liste des annÃ©es
const years = [...new Set(cars.map((c) => c.year))].sort();
---

<Layout>
  <div class="cars-index">
    <h1>ðŸš— Voitures par AnnÃ©e (Rendu Dynamique)</h1>
    <p>SÃ©lectionnez une annÃ©e pour voir les voitures :</p>
    
    <div class="years-grid">
      {
        years.map((y) => (
          <div class="year-card">
            <a href={`/cars/rendu-dynamique/${y}`}>
              <h3>AnnÃ©e {y}</h3>
              <p>{cars.filter(c => c.year === y).length} voitures</p>
            </a>
          </div>
        ))
      }
    </div>
  </div>

  <style>
    .cars-index {
      max-width: 1200px;
      margin: 0 auto;
    }

    .cars-index h1 {
      text-align: center;
      color: #333;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .cars-index p {
      text-align: center;
      font-size: 1.2rem;
      margin-bottom: 3rem;
      color: #666;
    }

    .years-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .year-card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .year-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    }

    .year-card a {
      display: block;
      padding: 2rem 1.5rem;
      text-decoration: none;
      color: inherit;
      text-align: center;
    }

    .year-card h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1.4rem;
      color: #333;
    }

    .year-card p {
      margin: 0;
      color: #667eea;
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .years-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
      }
    }
  </style>
</Layout>